# HUMMBL MCP Server Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Core Configuration
# ============================================

# Node environment (development, production, test)
NODE_ENV=development

# Port for local development (optional)
PORT=3000

# ============================================
# Cloudflare Workers Configuration
# ============================================

# Cloudflare Account ID (required for deployment)
CLOUDFLARE_ACCOUNT_ID=

# Cloudflare API Token (required for deployment)
CLOUDFLARE_API_TOKEN=

# ============================================
# Database Configuration
# ============================================

# Cloudflare D1 Database ID (from wrangler d1 create)
D1_DATABASE_ID=

# ============================================
# Redis Configuration (Optional)
# ============================================

# Upstash Redis URL (optional - for session/history storage)
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================
# API Configuration
# ============================================

# API Base URL (for deployed instance)
API_BASE_URL=https://api.hummbl.io

# HUMMBL API Key (for enhanced recommendations)
# Leave empty to use local-only mode with all 120 models
HUMMBL_API_KEY=

# ============================================
# Observability Configuration (Optional)
# ============================================

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=hummbl-mcp-server
OTEL_ENVIRONMENT=development

# Enable tracing (true/false)
ENABLE_TRACING=false

# ============================================
# Security Configuration
# ============================================

# JWT Secret (for API authentication)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Session secret (for session signing)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug logging
DEBUG=false

# ============================================
# Rate Limiting (Optional)
# ============================================

# Rate limit for API requests (per hour)
RATE_LIMIT_PER_HOUR=1000

# Rate limit for API requests (per day)
RATE_LIMIT_PER_DAY=10000

# ============================================
# Development Tools (Optional)
# ============================================

# Enable source maps in production
ENABLE_SOURCE_MAPS=false

# Enable hot reload in development
ENABLE_HOT_RELOAD=true
