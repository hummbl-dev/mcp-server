{
  "name": "@hummbl/mcp-server",
  "version": "1.0.0-beta.2",
  "description": "Model Context Protocol server for HUMMBL Base120 mental models framework",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "hummbl-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "!dist/**/*.test.*",
    "!dist/__tests__",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:api": "tsc --outDir dist --target es2022 --module es2022 --moduleResolution bundler src/api.ts",
    "dev": "tsx src/index.ts",
    "dev:api": "wrangler dev src/api.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky || true",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "deploy": "npm run build:api && wrangler deploy",
    "deploy:staging": "npm run build:api && wrangler deploy --env staging",
    "provision": "node scripts/provision-infra.js",
    "seed": "wrangler d1 execute hummbl-api --file=seed.sql",
    "create-key": "tsx scripts/create-api-key.ts",
    "import-relationships": "tsx scripts/import-relationships-csv.ts",
    "ship": "node scripts/deploy.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mental-models",
    "hummbl",
    "cognitive-framework",
    "problem-solving"
  ],
  "author": "Reuben <reuben@hummbl.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hummbl-dev/mcp-server.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.4.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-trace-node": "^2.4.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@upstash/redis": "^1.36.1",
    "hono": "^4.11.4",
    "nanoid": "^5.1.6",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260111.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-istanbul": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "bugs": {
    "url": "https://github.com/hummbl-dev/mcp-server/issues"
  },
  "homepage": "https://github.com/hummbl-dev/mcp-server#readme"
}
